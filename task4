  }
  
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #333;
    padding: 10px 0;
  }
  
  .navigationbar {
    display: flex;
    justify-content: space-around;
  }
  
  .navigationbar a {
    color: #fff;
    text-decoration: none;
    padding: 10px 15px;
